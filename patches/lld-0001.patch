+static bool isPETarget(const std::vector<const char *> &V) {
+  for (auto It = V.begin(); It != V.end(); It++) {
+    if (*It == StringRef("-m")) {
+      It++;
+      if (It == V.end())
+        return false;
+      if (*It == StringRef("i386pe"))
+        return true;
+      if (*It == StringRef("i386pep"))
+        return true;
+      if (*It == StringRef("thumb2pe"))
+        return true;
+      return false;
+    }
+  }
+  return false;
+}
